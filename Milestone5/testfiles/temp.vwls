// Problem 4 - Temperature Analyzer (1D Arrays)

nt n; 

//input 
prnt("Enter amount of days: ");
whl(1){
    n = scnNT;
    f(n>0){
        brk;
    }
    prnt("Array size N must be positive. Try again.");
}

flt T[n];

// Read the temperatures
nt i; 
fr(i = 0; i < n; i++) {
    prnt("Enter temp for day ", i, ": ");
    T[i] = scnFLT;
}

// Compute mean, min, and max 
flt sum;
sum = 0.0;

flt min;
flt max;
flt current;

min = T[0];
max = T[0];

fr(i = 0; i < n; i++) {
    current = T[i];
    
    // Accumulate Sum
    sum = sum + current;
    
    // Check Min
    f(current < min) {
        min = current;
    }
    
    // Check Max
    f(current > max) {
        max = current;
    }
}
flt mean;
mean = sum / n;

// Count the days above mean
nt count;
count = 0;

fr(i = 0; i < n; i++) {
    f(T[i] > mean) {
        count = count + 1;
    }
}

// Print the Results
prnt("mean = ", mean);
prnt("min = ", min);
prnt("max = ", max);
prnt("above_mean = ", count);